{
    "name": "@kuindji/conditional-string",
    "version": "1.0.0",
    "description": "Type-safe conditional string template parser with compile-time inference",
    "author": "Ivan Kuindzhi",
    "license": "MIT",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kuindji/conditional-string.git"
    },
    "bugs": {
        "url": "https://github.com/kuindji/conditional-string/issues"
    },
    "homepage": "https://github.com/kuindji/conditional-string#readme",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist/**/*"
    ],
    "engines": {
        "node": ">=16.0.0"
    },
    "keywords": [
        "string",
        "template",
        "conditional",
        "typescript",
        "type-safe",
        "string-template",
        "dynamic-string",
        "template-literals"
    ],
    "sideEffects": false,
    "scripts": {
        "build": "tsc -p ./tsconfig.build.json",
        "lint": "bun eslint .",
        "test": "bun test tests/**/*.spec.ts*",
        "test:types": "tsc -p ./tests/types/tsconfig.json",
        "test:all": "bun run test:types && bun run test",
        "prepublishOnly": "bun run build"
    },
    "devDependencies": {
        "@types/bun": "^1.3.3",
        "typescript": "^5.9.3"
    }
}
